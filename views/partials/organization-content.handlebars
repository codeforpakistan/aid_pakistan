<!-- Start Content -->
<div id="content">
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                
                <h1 style="color:#01ab52">{{organization.name}}</h1>
                <ul class="post-meta">
                    <li>Lahore{{organization.location}}</li>
                    {{{getCategories organization.categories}}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 blog-box">
                

                <div id="blueimp-gallery-carousel" class="blueimp-gallery blueimp-gallery-carousel">
                    <!-- The container for the modal slides -->
                    <div class="slides" style="background-size:cover; !important"></div>

    
                    <!-- Controls for the borderless lightbox -->
                    <h3 class="title"></h3>

                    <a class="fullscreen">‹</a>
                    <a class="prev">‹</a>
                    <a class="next">›</a>
                    <a class="play-pause"></a>
                    <ol class="indicator"></ol>

                    <!-- The modal dialog, which will be used to wrap the lightbox content -->
                    <div class="modal fade">

                        <div class="modal-dialog">

                            <div class="modal-content">

                                <div class="modal-header">

                                    <button type="button" class="close" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title"></h4>

                                </div>

                                <div class="modal-body next"></div>

                                <div class="modal-footer">

                                    <button type="button" class="btn btn-default pull-left prev">
                                        <i class="glyphicon glyphicon-chevron-left"></i>
                                        Previous
                                    </button>
                                    <button type="button" class="btn btn-primary next">
                                        Next
                                        <i class="glyphicon glyphicon-chevron-right"></i>
                                    </button>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>
                <div id="links">
                </div>
                <!-- End Single Post (Gallery) -->
                <div class="hr1" style="margin-bottom:15px;"></div>
                <!-- Start Single Post Content -->
                <div class="post-content tab-content">
                    <h2>About {{organization.name}}</h2>

                    <p>{{organization.description}}</p>
                    <div class="post-bottom clearfix">

                    </div>
                </div>
                <!-- End Single Post Content -->

                <!-- End Single Post Area -->

            </div>


            <!-- Sidebar -->
            <div class="col-md-3 sidebar right-sidebar ">

                <!-- Donate widget -->
                <div class="widget widget-popular-posts tab-content">
                    <h4>Donate <span class="head-line"></span></h4>
                    <ul>

                        {{#each payment_method}}
                        <li>
                        <div class="widget-thumb">
                            <a href="{{this.link}}"><img height="31" width="95" src="{{this.image}}"></a>                  </div>
                        <div class="widget-content">
                            <h5><a href="#">Donate Online</a></h5>
                            <span>{{this.detail}}</span>
                        </div>
                        <div class="clearfix"></div>
                        </li>
                        {{else}}
                        <li>
                        <div class="widget-content">
                            <h5>No Donation method available</h5>
                        </div>
                        <div class="clearfix"></div>

                        </li>
                        {{/each}}
                    </ul>
                </div>

                <!-- Categories Widget -->
                <div class="widget widget-popular-posts tab-content">
                    <h4>Spread the word <span class="head-line"></span></h4>
                    <ul class="post-share">
                        {{#each organization.social_links}}
                        <li>
                        <div>
                            <a class="{{this.type}}" href="{{this.link}}" style="margin-right: 8px"><i class="fa fa-{{this.type}}"></i> <a href="{{this.link}}">{{this.type}}</a> 
                            </div>
                            </li>
                            {{else}}
                            <li>
                            <div class="widget-content">
                                <h5>No Social link available</h5>
                            </div>
                            <div class="clearfix"></div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>


                </div>
                <!--End sidebar-->
            </div>
    </div>
</div>
<script src="/public/js/blueimp-gallery.min.js"></script>
<script>
blueimp.Gallery([
        {{#each organization.pictures.gallery}}
        {
href:"{{{getEncodedURI this}}}",
        type: 'text/html'
        },
        {{/each}}
], {
container: '#blueimp-gallery-carousel',
stretchImages:true,

});
</script>
